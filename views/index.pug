haphead
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  link(type="text/css" rel="stylesheet" href="/public/css/materialize.min.css")
  if !mobile
    //- link(type='text/css' rel='stylesheet' href='/public/css/index-desktop.css')
    link(type='text/css' rel='stylesheet' href='/public/css/index-desktop-new.css')
  else
    meta(name="viewport" content="initial-scale=1.0, user-scalable=no")
    link(type='text/css' rel='stylesheet' href='/public/css/index-mobile.css')
  script(src='/public/scripts/materialize.min.js')
  script(src='/public/scripts/jquery-3.3.1.min.js')
  script(src='/public/scripts/socket.io.slim.js')
  if user
    script.
      let curUser = !{JSON.stringify(user)};
  else
    script.
      let curUser = false;
  script(src="/public/scripts/index.js")
  script(src="/public/scripts/map.js")
  script(async defer src='https://maps.googleapis.com/maps/api/js?key=' + mapApiKey + '&libraries=places&callback=initMap&callback=initAutoComplete')
  
.info
  nav
    .nav-wrapper.primary
      .brand-logo Happin
      ul.right.hide-on-med-and-down.nav-right
        if user
          li.newHapBtn.navBtn
            img#newHapIcon(src='public/assets/icons/add.svg')
            .newHapLabel New Hap
          li.profileBtn.navBtn
            i.material-icons person
            .profileBtnLabel=user.username
        else
          li.signupBtn.navBtn Sign Up
          li.loginBtn.navBtn Log in
  .mapAndHaps
    //- Map
    .row
      .mapContainer.col.s9
        img#mapLoading(src="/public/assets/Procfile.svg")
        #map(width="300" height="300")   
      //- Sign Up Form
      .mapForms.col.s9
        .signupContainer
          h2.center-align#signupLabel Sign Up
          .signupForm
            .signupInputs
              .input-field
                input#signupUsername.hapInput(placeholder="Username")
              .input-field
                input#signupPassword.hapInput(placeholder="Password" type="password")
            .signupSubmitBtns
              .btn-large.primary-btn#signupSubmitBtn Sign Up
              .btn-large.primary-btn#loginSubmitBtn Log In
                  
        //- New Hap Form 
        .hapFormContainer
          .hapFormNav
            i.material-icons#hapFormCloseBtn.primary-text-dark close
          h1.newHapFormLabel.flow-text.primary-text-dark Make it Happin
          .hapForm
            .hapFormInputs
              .input-field.hapFormInput
                input#newHapTitle.hapInput.primary-text-dark(type="text" class="validate")
                label(for="newHapTitle") Title
              .input-field.hapFormInput
                textarea#newHapBody.materialize-textarea.primary-text-dark(type="text" class="validate")
                label(for="newHapBody") Description
              .input-field.hapFormInput
                input#newHapLoc.hapInput.primary-text-dark(type="text" class="validate")
                label#newHapLocLabel(for="newHapLoc") Location
              .row
                .input-field.col.s6
                  input#newHapDate.hapInput.datepicker(type="text" class="validate")
                  label(for="newHapDate") Date
                .input-field.col.s6
                  input#newHapTime.hapInput.timepicker(type="text" class="validate")
                  label(for="newHapTime") Time
              #newHapSubmit.btn-large.primary-btn Submit 
